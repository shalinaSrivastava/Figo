<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:background="#FFF"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginDashboard">

    <FrameLayout
        android:id="@+id/fn"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:weightSum="2"
        android:background="#9c1e2d"
        android:measureWithLargestChild="true"
        android:orientation="horizontal">

        <!--go to the first page in the view pager-->
        <TextView
            android:id="@+id/goto_first"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:text="Attandance"/>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#310101"/>

        <!--Delete the current page-->
        <TextView
            android:id="@+id/delete_current"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/LeaveRequest"/>

        <!--go to the last page in the view pager-->

    </LinearLayout>
</LinearLayout>